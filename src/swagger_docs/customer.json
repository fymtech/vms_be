{
  "openapi": "3.0.0",
  "info": {
    "title": "Auth APIs",
    "version": "1.0.0",
    "description": "API documentation for Auth endpoint"
  },
  "paths": {
    "/api/customer/verify/email": {
      "post": {
        "tags": ["Customer Controller"],
        "summary": "Verifies a customer's email if it exists in the system",
        "description": "This endpoint checks if the provided email exists in the system and verifies the email if it does.",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "email"
            },
            "description": "The email address to verify."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully verfiied the customer's email.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Verified Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Customer with email: <email> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "409": {
            "description": "Conflict error due to duplicate value in request body (already exists in db)",
            "content": {
              "application/json": {
                "example": {
                  "message": "Already verified on <date>.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 409,
                  "isError": false
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
