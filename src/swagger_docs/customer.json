          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    }
  }
}
