  "paths": {
    "/api/client/register": {
      "post": {
        "tags": ["Client Controller"],
        "summary": "Registers a client in the system",
        "description": "Registers a client in the system with the provided details.",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "firstName": "John",
                "lastName": "Doe",
                "email": "johndoe@mail.com",
                "countryCode": "+91",
                "phone": "1234567890",
                "countryId": "686b9fc0de470e6df8db5eb5",
                "profileImage": "default.png"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully registered the client.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Registered Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Invalid parameter ID/Invalid user type.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "message": "Access Denied. No token provided./Invalid token/Access token expired at <Date>. Please login again.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 401,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Role/User type not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "409": {
            "description": "Conflict error due to duplicate value in request body (already exists in db)",
            "content": {
              "application/json": {
                "example": {
                  "message": "<key> '<value>' already exists",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 409,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error/ Could not perform action.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
