    "description": "API documentation for Auth endpoint"
  },
  "paths": {
    "/api/country/": {
      "post": {
        "tags": ["Country Controller"],
        "summary": "Creates a country for the inventory",
        "description": "Creates a country for the inventory with the provided details.",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "name_en": "India",
                "name_ar": "Al Hind"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully created the country.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Created Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Country Controller"],
        "summary": "Fetches all the countries",
        "description": "This endpoint fetches all the country names in english and arabic if they exist in the system.",
        "responses": {
          "200": {
            "description": "Fetched successfully.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Fetched successfully.",
                  "data": [
                    {
                      "id": "<Mongodb generated id>",
                      "name_en": "1 year visa",
                      "name_ar": "1 year visa"
                    },
                    {
                      "id": "<Mongodb generated id>",
                      "name_en": "3 month visa",
                      "name_ar": "3 month visa"
                    }
                  ],
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Countries not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Country Controller"],
        "summary": "Updates a country.",
        "description": "Updates a country name in english and/or arabic if it exists in the system.",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "id": "<Mongodb generated country id>",
                "name_en": "India",
                "name_ar": "Al Hind"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully updated the country.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Updated Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Invalid parameter ID.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Country with id: <id> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Country Controller"],
        "summary": "Deletes a country.",
        "description": "Deletes a country if it exists in the system.",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "id": "<Mongodb generated country id>"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully deleted the country.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Deleted Succesfully.",
                  "data": null,
                  "status": true,
