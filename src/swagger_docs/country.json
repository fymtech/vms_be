                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Invalid parameter ID.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Country with id: <id> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
