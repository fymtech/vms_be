{
  "openapi": "3.0.0",
  "info": {
    "title": "Auth APIs",
    "version": "1.0.0",
    "description": "API documentation for Auth endpoint"
  },
  "paths": {
    "/api/admin/verify/email": {
      "post": {
        "tags": ["Admin Controller"],
        "summary": "Verifies a admin's email if it exists in the system",
        "description": "This endpoint checks if the provided email exists in the system and verifies the email if it does.",
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "email"
            },
            "description": "The email address to verify."
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully verfiied the admin's email.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Verified Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Admin with email: <email> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "409": {
            "description": "Conflict error due to duplicate value in request body (already exists in db)",
            "content": {
              "application/json": {
                "example": {
                  "message": "Already verified on <date>.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 409,
                  "isError": false
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error/ Could not perform action.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/": {
      "get": {
        "tags": ["Admin Controller"],
        "summary": "Fetches all the admins if they exist in the system",
        "description": "This endpoint fetches all the admin user profiles if they exist in the system.",
        "responses": {
          "200": {
            "description": "Fetched successfully.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Fetched successfully.",
                  "data": [
                    {
                      "id": "<Mongodb generated id>",
                      "name": "Admin Name",
                      "email": "amdin@mail.com",
                      "countryCode": "+966",
                      "phone": "543485942",
                      "status": "active"
                    }
                  ],
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "message": "Access Denied. No token provided./Invalid token/Access token expired at <Date>. Please login again.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 401,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Admins not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error/ Could not perform action.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
    "/api/admin/{id}": {
      "get": {
        "tags": ["Admin Controller"],
        "summary": "Fetches the required info of the Admin",
        "description": "This endpoint fetches the required information about the admin by id if it exists in the system.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The mongodb generated id of the admin."
          }
        ],
        "responses": {
          "200": {
            "description": "Fetched successfully.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Fetched successfully.",
                  "data": [
                    {
                      "id": "<Mongodb generated id>",
                      "name": "Admin Name",
                      "email": "amdin@mail.com",
                      "countryCode": "+966",
                      "phone": "543485942",
                      "deviceType": 2,
                      "profileImage": "<Image url>",
                      "lastLoggedInAt": "<Date and Time>",
                      "status": "active"
                    }
                  ],
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "message": "Access Denied. No token provided./Invalid token/Access token expired at <Date>. Please login again.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 401,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Admin with id: <id> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error/ Could not perform action.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    }
  }
}
