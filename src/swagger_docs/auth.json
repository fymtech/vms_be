    "/api/auth/register/customer": {
      "post": {
        "tags": ["Auth Controller"],
        "summary": "Registers a customer in the system",
        "description": "Registers a customer in the system with the provided details. Device type is 0 for android, 1 for ios, and 2 for web.",
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "firstName": "John",
                "lastName": "Doe",
                "email": "johndoe@mail.com",
                "gender": "MALE",
                "countryCode": "+91",
                "phone": "1234567890",
                "password": "1234567890",
                "countryId": "686b9fc0de470e6df8db5eb5",
                "stateId": "686ba0389729b54f09a84489",
                "cityId": "686ba0389729b54f09a84489",
                "address": "Test address",
                "postalCode": "123456",
                "role": "CUSTOMER",
                "deviceType": 2,
                "locale": "en",
                "referralCode": "SC-00001",
                "profileImage": "default.png"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully registered the customer.",
            "content": {
              "application/json": {
                "example": {
                  "message": "Registered Succesfully.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Invalid parameter ID/Invalid user type.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Role/User type not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "409": {
            "description": "Conflict error due to duplicate value in request body (already exists in db)",
            "content": {
              "application/json": {
                "example": {
                  "message": "<key> '<value>' already exists",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 409,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
