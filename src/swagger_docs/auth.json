    "/api/auth/{userType}/login": {
      "post": {
        "tags": ["Auth Controller"],
        "summary": "Logins the user to the system",
        "description": "Logins the user in the system with the provided details. Device type is 0 for android, 1 for ios, and 2 for web.",
        "parameters": [
          {
            "name": "userType",
            "in": "path",
            "required": true,
            "description": "Type of user logging in. Allowed values: customer, admin.",
            "schema": {
              "type": "string",
              "enum": ["customer", "admin"]
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "example": {
                "email": "johndoe@mail.com",
                "password": "1234567890",
                "deviceType": 2
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "User successfully logged in.",
            "content": {
              "application/json": {
                "example": {
                  "message": "User successfully logged in.",
                  "data": {
                    "loginToken": "<loginToken>",
                    "userId": "This could be customerId and adminId as well depending on the userType."
                  },
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Username or password is empty.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "403": {
            "description": "Forbidden or no access",
            "content": {
              "application/json": {
                "example": {
                  "message": "Password is incorrect.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 403,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Customer/Admin with email: <email> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/{userType}/logout": {
      "post": {
        "tags": ["Auth Controller"],
        "summary": "Logouts the user from the system",
        "description": "Logouts the user from the system if it or its auth token exists.",
        "parameters": [
          {
            "name": "userType",
            "in": "path",
            "required": true,
            "description": "Type of user logging out. Allowed values: customer, admin.",
            "schema": {
              "type": "string",
              "enum": ["customer", "admin"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully logged out.",
            "content": {
              "application/json": {
                "example": {
                  "message": "User successfully logged out.",
                  "data": null,
                  "status": true,
                  "httpResponse": 200,
                  "isError": false
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "example": {
                  "message": "Data validation error/Invalid user type./Not customer's/admin's token.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 400,
                  "isError": true
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "example": {
                  "message": "Access Denied. No token provided./Invalid token/Access token expired at <Date>. Please login again.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 401,
                  "isError": true
                }
              }
            }
          },
          "403": {
            "description": "Forbidden or no access",
            "content": {
              "application/json": {
                "example": {
                  "message": "Token not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 403,
                  "isError": true
                }
              }
            }
          },
          "404": {
            "description": "Not found",
            "content": {
              "application/json": {
                "example": {
                  "message": "Customer/Admin with id: <id> not found.",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 404,
                  "isError": true
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error",
                  "data": "<Error details or null>",
                  "status": false,
                  "httpResponse": 500,
                  "isError": true
                }
              }
            }
          }
        }
      }
    }
